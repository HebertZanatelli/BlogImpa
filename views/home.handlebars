<div class="container-xl">
<div class="d-flex justify-content-around align-items-center">
    <h1 class="mt-3 mb-4">Lista de postagens: </h1>
    <a href="/cad"><button type="button" class="btn btn-secondary">Criar Post</button></a>

</div>


{{#each posts}}


<div class="card mt-4">
  <div class="card-header ">
   <h4> {{titulo}} </h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{conteudo}}</h5>
    <a href="/deletar/{{id}}#" class="btn btn-primary mt-3">Excluir Post</a>
  </div>
</div>

{{/each}}


</div>